<h2>User details</h2>

<dl class="dl-horizontal">
	<dt><strong>Full Name</strong></dt>
	<dd><%= @user.full_name %></dd>

	<dt><strong>E-mail</strong></dt>
	<dd><%= @user.email %></dd>
</dl>

<% if @user.stocks.size > 0 %>
	<%= render 'stocks/list' %>
<% else %>
	<p class="lead">This user is not tracking any stocks at the moment.</p>
<% end %>

<%= link_to("Back", my_friends_path, class: "btn btn-primary") %>